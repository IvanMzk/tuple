{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [        
        {
            "type": "shell",
            "label": "cmake generate",
            "command": "cmake.exe -G \"NMake Makefiles\" -S ${workspaceFolder} -B ${workspaceFolder}\\build",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build"                
        },
        {
            "type": "shell",
            "label": "cmake build Test",
            "command": "cmake.exe --build ${workspaceFolder}\\build --target Test",
            "args": [],            
            "group": "test"
        },
        {
            "type": "shell",
            "label": "cmake build Test_selected",
            "command": "cmake.exe --build ${workspaceFolder}\\build --target Test_selected",
            "args": [],            
            "group": "test"
        },
        {
            "type": "shell",
            "label": "Run all tests",
            "command": "${workspaceFolder}\\build\\test\\Test.exe",
            "args": [],
            "group": "test"       
        },
        {
            "type": "shell",
            "label": "Run selected tests",
            "command": "${workspaceFolder}\\build\\test\\Test_selected.exe",
            "args": [],
            "group": "test"       
        },
        {
            "label":"All Tests build & run",
            "dependsOrder": "sequence",
            "dependsOn":["cmake generate","cmake build Test","Run all tests"],
            "group": "test"
        },
        {
            "label":"Selected Tests build & run",
            "dependsOrder": "sequence",
            "dependsOn":["cmake generate","cmake build Test_selected","Run selected tests"],
            "group": "test"
        },
        {
            "type": "shell",
            "label": "cmake build Main",
            "command": "cmake.exe --build ${workspaceFolder}\\build --target Main",
            "args": [],            
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Run Main",
            "command": "${workspaceFolder}\\build\\src\\Main.exe",
            "args": [],
            "group": "build"
        },
        {
            "label":"Main build & run",
            "dependsOrder": "sequence",
            "dependsOn":["cmake generate","cmake build Main","Run Main"],
            "group": "build"
        }
    ]
}